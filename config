# Generate config with:
# sed '/^[[:space:]]*# config.default_keys/r config.default_keys' config.base > config

# default mod key (ALT)
set $mod Mod1

# vim style navigation
set $up k
set $down j
set $left h
set $right l

# defaults
floating_modifier $mod
font xft:Droid Sans Mono 8
focus_follows_mouse no

# window defaults
for_window [class=".*"] border pixel 1
for_window [class="Galculator"] floating enable

# pass-through mode
mode "pass-through" {
  bindsym $mod+Escape mode 1
}

# screen 1
workspace 1:1 output DP1
workspace 2:1 output DP1
workspace 3:1 output DP1
workspace 4:1 output DP1
workspace 5:1 output DP1
workspace 6:1 output DP1
workspace 7:1 output DP1
workspace 8:1 output DP1
workspace 9:1 output DP1
workspace 10:1 output DP1

mode "1" {
  # config.default_keys
  # hide/show window title
  bindcode $mod+48 border normal 1
  bindcode $mod+Shift+48 border pixel 1

  # close window
  bindsym $mod+c kill

  # application shortcuts
  bindsym $mod+r exec dmenu_run
  bindsym $mod+f exec pcmanfm
  bindsym $mod+t exec gnome-terminal

  # window focus
  bindsym $mod+$left focus left
  bindsym $mod+$down focus down
  bindsym $mod+$up focus up
  bindsym $mod+$right focus right

  bindsym $mod+a focus parent
  bindsym $mod+d focus child

  # screen focus
  bindsym $mod+Left focus output left
  bindsym $mod+Down focus output down
  bindsym $mod+Up focus output up
  bindsym $mod+Right focus output right

  # move window
  bindsym $mod+Shift+$left move left
  bindsym $mod+Shift+$down move down
  bindsym $mod+Shift+$up move up
  bindsym $mod+Shift+$right move right

  # move window to screen
  bindsym $mod+Shift+Left move container to output left
  bindsym $mod+Shift+Down move container to output down
  bindsym $mod+Shift+Up move container to output up
  bindsym $mod+Shift+Right move container to output right

  # resize windows
  bindsym $mod+Shift+u resize shrink width 5 px or 5 ppt
  bindsym $mod+Shift+i resize grow height 5 px or 5 ppt
  bindsym $mod+Shift+o resize shrink height 5 px or 5 ppt
  bindsym $mod+Shift+p resize grow width 5 px or 5 ppt

  # change tiling position
  bindsym $mod+period split h
  bindsym $mod+comma split v

  # change layouts
  bindsym $mod+F11 fullscreen toggle
  bindsym $mod+space layout toggle all
  bindsym $mod+f floating toggle

  # scratch pad
  bindsym $mod+Shift+minus move scratchpad
  bindsym $mod+minus scratchpad show

  # special modes
  bindsym $mod+Escape mode "pass-through"

  # system commands
  bindsym $mod+q restart
  bindsym $mod+Shift+q exec "_LXSESSION_PID=$(pgrep -ox i3) lxde-logout"
  bindsym $mod+Ctrl+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

  bindsym $mod+1 workspace 1:1
  bindsym $mod+2 workspace 2:1
  bindsym $mod+3 workspace 3:1
  bindsym $mod+4 workspace 4:1
  bindsym $mod+5 workspace 5:1
  bindsym $mod+6 workspace 6:1
  bindsym $mod+7 workspace 7:1
  bindsym $mod+8 workspace 8:1
  bindsym $mod+9 workspace 9:1
  bindsym $mod+0 workspace 10:1

  bindsym $mod+Shift+1 move container to workspace 1:1
  bindsym $mod+Shift+2 move container to workspace 2:1
  bindsym $mod+Shift+3 move container to workspace 3:1
  bindsym $mod+Shift+4 move container to workspace 4:1
  bindsym $mod+Shift+5 move container to workspace 5:1
  bindsym $mod+Shift+6 move container to workspace 6:1
  bindsym $mod+Shift+7 move container to workspace 7:1
  bindsym $mod+Shift+8 move container to workspace 8:1
  bindsym $mod+Shift+9 move container to workspace 9:1
  bindsym $mod+Shift+0 move container to workspace 10:1
}

# screen 2
workspace 1:2 output HDMI3
workspace 2:2 output HDMI3
workspace 3:2 output HDMI3
workspace 4:2 output HDMI3
workspace 5:2 output HDMI3
workspace 6:2 output HDMI3
workspace 7:2 output HDMI3
workspace 8:2 output HDMI3
workspace 9:2 output HDMI3
workspace 10:2 output HDMI3

